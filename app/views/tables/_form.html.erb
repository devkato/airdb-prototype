<%= form_for([@project, @table]) do |f| %>
  <% if @table.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@table.errors.count, "error") %> prohibited this table from being saved:</h2>

      <ul>
      <% @table.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class='clearfix'>
      <%= f.label :name %>
      <div class="input">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class='clearfix'>
      <%= f.label :description %>
      <div class="input">
        <%= f.text_field :description %>
      </div>
    </div>

    <%= f.hidden_field :project_id, :value => @project.id %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </fieldset>

  <div class="actions">
    <%= f.submit :class => 'btn primary', :value => nil %>&nbsp;&nbsp;
    <%= link_to 'Cancel', project_path(@project), :class => 'btn' %>
  </div>
<% end %>
